{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",

            "command": "echo ./run.sh && . $HOME/github-token.sh && find $HOME/riscv/nuttx -name defconfig >/tmp/defconfig.txt && cargo run -- --user nuttxmacos --defconfig /tmp/defconfig.txt | tr -d '\\033' ",

            "problemMatcher": "$rustc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        }
    ]
}
